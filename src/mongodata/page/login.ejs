    </head>
    <body>
    	<!--inline[../../common/page/header.ejs]-->
    <div id="login">
        <div class="errinfo"></div>
        <div class="container form_login">
                    <form action="/mongodata/login" method="post" class="form-horizontal">
                    	<div class="form-group">
                    		<label class="col-xs-3 col-sm-3 col-md-3 control-label username">用户名：</label>
                    		<div class="col-xs-6 col-sm-6 col-md-6">
                    			<input type="text" placeholder="用户名" name="username" class="form-control">
                    		</div>
                    	</div>
                    	<div class="form-group">
                    		<label class="col-xs-3 col-sm-3 col-md-3 control-label psw">密码：</label>
                    		<div class="col-xs-6 col-sm-6 col-md-6">
                    			<input type="password" placeholder="密码" name="password" class="form-control">
                    		</div>
                    	</div>
                    	<div class="form-group">                    	
                    		<div class="col-xs-offset-3 col-xs-6 col-sm-offset-3 col-sm-6 col-md-offset-3 col-md-6">
                                <input type="hidden" name="_csrf" value="<%-locals._csrf%>">
                    			<input type="submit" class="btn btn-primary" id="reg"  value="登录"/>
                    		</div>
                    	</div>
                    </form>
                  <p style="color:#f00;text-align: center;font-weight: bold;"><%-locals.unuser%></p>
                  <p style="color:#f00;text-align: center;font-weight: bold;"><%-locals.unpsw%></p>
        </div>
    </div>
        <!--inline[../../common/page/footer.ejs]-->
        <!--inline[../../common/page/foot.ejs]-->
    </body>
</html>